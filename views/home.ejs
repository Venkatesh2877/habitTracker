<html>
    <header>
        <title>
            <%=title%>
        </title>
        <link rel="stylesheet" href="/css/home.css">
        <script src="https://kit.fontawesome.com/d80069c1ff.js" crossorigin="anonymous"></script>    
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    </header>


    <body>
        <h1>Hi Venkatesh. </h1>
          <h1>  Here Are your Tasks</h1>
          <div id="habit-container">
            <%for(habit of habits){%>
                <div class="habit" id="<%=habit.id%>">
                    <div style="width: 40%;"><%=habit.name%></div>
                    <div>
                        <a href="/complete-update/?id=<%=habit.id%>">
                            <%if(habit.completed==1){%>
                                <div class="completed-status" style="background-color: orange;"></div>
                            <%}else if(habit.completed==2){%>
                                <div class="completed-status" style="background-color: green;"></div>
                            <%}else if(habit.completed==3){%>
                                <div class="completed-status" style="background-color: red;"></div>
                            <%}%>
                        </a>
                        
                    </div>
                    <div>
                        <a class= "deleteTag" href="/delete/?id=<%=habit.id%>"><i class="fa-regular fa-trash-can fa-bounce"></i></a>
                    </div>
                </div>
            <%}%>
          </div>
        
        


        <form action="/new-habit" id="new-habit-form" method="post">
            <input type="text" name="name" placeholder="Any new habit??">
            <input type="hidden" name="completed" value="3">
            <input type="submit">
        </form>
    </body>
    <script src="/js/home.js"></script>
</html>